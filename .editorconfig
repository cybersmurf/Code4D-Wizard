root = true

[*]
charset             = utf-8
end_of_line         = crlf
indent_style        = space
indent_size         = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Delphi source
[*.{pas,dpr,dpk,dfm,dproj}]
indent_size = 2

# Batch scripts (Windows-style tabs)
[*.{bat,cmd}]
indent_style = tab
indent_size  = 4

# PowerShell
[*.ps1]
indent_size = 4

# YAML  (GitHub Actions etc.)
[*.{yml,yaml}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
