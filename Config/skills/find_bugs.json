{
  "name": "find_bugs",
  "version": "1.0",
  "description": "Detect potential bugs and runtime errors in Delphi code",
  "category": "debugging",
  "agent_mode": "single-tool",

  "instructions": ["base", "delphi-expert"],

  "input_schema": {
    "type": "object",
    "properties": {
      "code": {
        "type": "string",
        "description": "Code to analyze for bugs"
      },
      "bug_types": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": [
            "null_pointer",
            "memory_leak",
            "resource_leak",
            "race_condition",
            "buffer_overflow",
            "type_mismatch",
            "logic_error",
            "exception_handling"
          ]
        },
        "description": "Specific bug types to check for (empty = all)"
      },
      "severity_threshold": {
        "type": "string",
        "enum": ["critical", "high", "medium", "low"],
        "default": "medium",
        "description": "Minimum severity to report"
      }
    },
    "required": ["code"]
  },

  "output_schema": {
    "type": "object",
    "properties": {
      "bugs": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "type":         { "type": "string" },
            "severity":     { "type": "string" },
            "line":         { "type": "integer" },
            "description":  { "type": "string" },
            "explanation":  { "type": "string" },
            "fix_suggestion": { "type": "string" },
            "example_fix":  { "type": "string" }
          }
        }
      },
      "risk_score": {
        "type": "integer",
        "minimum": 0,
        "maximum": 100,
        "description": "Overall code risk score (0 = safe, 100 = critical)"
      }
    }
  }
}
