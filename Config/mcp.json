{
  "$schema": "https://modelcontextprotocol.io/schema/mcp.json",
  "version": "1.0",
  "githubModels": {
    "enabled": true,
    "model": "gpt-4o",
    "endpoint": "https://models.inference.ai.azure.com",
    "token": "${env:GITHUB_TOKEN}",
    "maxTokens": 2000,
    "temperature": 0.3,
    "streaming": false,
    "fallbackModels": ["claude-3.5-sonnet", "o1-preview"]
  },
  "mcpServers": {
    "mcp-emistr-docs": {
      "command": "C:\\emistr_dev_mcp\\.venv\\Scripts\\python.exe",
      "args": ["C:\\emistr_dev_mcp\\mcp-emistr-docs\\server.py"],
      "transport": "stdio",
      "enabled": true,
      "env": {
        "CHROMA_HOST": "192.168.99.40",
        "CHROMA_PORT": "6661",
        "OLLAMA_HOST": "http://192.168.220.6:11434",
        "OLLAMA_EMBED_MODEL": "mxbai-embed-large:latest"
      },
      "tools": ["search_emistr_docs", "search_emistr_code"]
    },
    "delphi_assistant": {
      "command": "embedded",
      "description": "Universal Delphi development assistant",
      "tools": [
        "analyze_code",
        "refactor_code",
        "generate_unit_test",
        "explain_code",
        "find_bugs",
        "suggest_patterns",
        "modernize_syntax",
        "check_threading",
        "generate_docs",
        "optimize_code",
        "analyze_entity",
        "generate_service",
        "query_docs",
        "ask_ai"
      ],
      "env": {
        "GITHUB_TOKEN": "${env:GITHUB_TOKEN}"
      }
    }
  },
  "rag": {
    "enabled": true,
    "chromadb_url": "http://localhost:8000",
    "collections": ["delphi_docs", "vcl_docs", "fmx_docs", "rtl_docs"],
    "auto_index": true,
    "watch_directories": [
      "Knowledge/docs/delphi",
      "Knowledge/docs/vcl",
      "Knowledge/docs/firemonkey"
    ]
  },
  "lsp": {
    "enabled": true,
    "realtime_diagnostics": true,
    "debounce_ms": 500,
    "rules": {
      "missing_try_finally":    "warning",
      "string_concat_in_loop":  "warning",
      "unused_variable":        "info",
      "deprecated_api":         "warning"
    }
  },
  "shortcuts": {
    "aiAssistant":  "Ctrl+Alt+A",
    "quickAnalyze": "Ctrl+Shift+A",
    "generateTest": "Ctrl+Alt+T"
  }
}
